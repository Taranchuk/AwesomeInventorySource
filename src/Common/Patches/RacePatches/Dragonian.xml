<?xml version="1.0" encoding="utf-8" ?>

<Patch>
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/ThingDef[@Name="DR_PawnBase"]</xpath>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationTest">
                    <xpath>Defs/ThingDef[@Name="DR_PawnBase"]/comps/li[compClass="AwesomeInventory.Loadout.CompAwesomeInventoryLoadout"]</xpath>
                    <success>Invert</success>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[@Name="DR_PawnBase"]/comps</xpath>
                    <value>
                        <li>
                            <compClass>AwesomeInventory.Loadout.CompAwesomeInventoryLoadout</compClass>
                        </li>
                    </value>
                </li>
            </operations>
        </match>
        <nomatch Class="PatchOperationTest">
            <xpath>Defs</xpath>
            <success>Always</success>
        </nomatch>
    </Operation>
</Patch>